<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	 http://www.springframework.org/schema/beans/spring-beans-4.1.xsd 
	 http://www.springframework.org/schema/context 
	 http://www.springframework.org/schema/context/spring-context.xsd">
	 
	<!-- 凭证匹配器：密码加密方式  -->
	<bean id="credentialsMatcher" class="org.apache.shiro.authc.credential.HashedCredentialsMatcher" >
		<property name="hashAlgorithmName" value="md5" ></property>
		<property name="hashIterations" value="1" ></property>
	</bean>	
	
	<!-- 自定义域：完成认证和授权的数据获取 -->
	<bean id="myRealm" class="com.sc.crmsys.realm.MyRealm" >
		<property name="credentialsMatcher" ref="credentialsMatcher" ></property>
	</bean>
	
	<!-- 缓存管理器: 划分一块内存用于存储数据  -->
	<bean id="cacheManager" class="org.apache.shiro.cache.MemoryConstrainedCacheManager" ></bean>
	
	<!-- 会话管理器 -->
	<bean id="sessionManager" class="org.apache.shiro.web.session.mgt.DefaultWebSessionManager" >
	 	<!-- session缓存时间 -->
	 	<property name="globalSessionTimeout" value="1800000" ></property>
		<!-- 失效session是否自动删除 -->
		<property name="deleteInvalidSessions" value="true" ></property>
	</bean>
	
	<!-- 安全管理器 -->
	<bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager" >
		<property name="realm" ref="myRealm" ></property>
		<property name="cacheManager" ref="cacheManager" ></property>
		<property name="sessionManager" ref="sessionManager" ></property>
	</bean>
	
	<!-- 表单认证过滤器 -->
	<!-- 获取登录请求传递的用户名和密码参数，进行login操作 -->
    <bean id="formAuthenticationFilter" class="org.apache.shiro.web.filter.authc.FormAuthenticationFilter" >
		<property name="loginUrl" value="/login" ></property>
		<property name="usernameParam" value="username" ></property>
		<property name="passwordParam" value="password" ></property>
	</bean>
	
	<bean id="logoutFilter" class="org.apache.shiro.web.filter.authc.LogoutFilter" >
		<property name="redirectUrl" value="/login.jsp" ></property>
	
	</bean>
	
	<!-- shiro过滤器   springboot--> 
	<bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean" >
		<!-- 注入安全管理器 -->
		<property name="securityManager" ref="securityManager" ></property>
		
		<!-- 登录页面 -->
		<property name="loginUrl" value="/login.jsp" ></property>
		
		<!-- 登录成功跳转路径:用户打开登陆页面，进行登录成功后跳转 -->
		<property name="successUrl" value="/user/index" ></property>
		
		<!-- 未授权提示页面 -->
		<property name="unauthorizedUrl" value="/unauthorized.jsp" ></property>
		
		
		<!-- 配置表单验证器 -->
		<property name="filters">
			<map>
				<entry key="authc" value-ref="formAuthenticationFilter" ></entry>
				<entry key="logout" value-ref="logoutFilter" />
			</map>		
		</property>
		
		<!-- 配置过滤器拦截链   -->
		<!-- authc:登录验证  anon:不需要认证  logout:登出 -->
		<property name="filterChainDefinitions"  >
			<value>
				/js/** = anon
				/css/** = anon
				/img/** = anon
				/upload/** = anon
				/login.jsp = anon
				/register.jsp = anon
				/role/** = anon
				/register = anon
				
<!-- 				/permission/t1 = perms[permission:t1] -->
				
				/logout.do = logout
				
				/** = anon
			</value>
		</property>
	</bean>
</beans> 	